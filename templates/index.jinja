<!DOCTYPE html>
<link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
<meta name="viewport" content="width=device-width, initial-scale=1">
<head><title>Karttaklubi</title></head>
<body>
    <div class="siteWrap">
        {% if session.username %}
        <div class="header">
            {% include "header.jinja" %}
        </div>
        <div style="display: flex; flex-direction: row;">
            {% if alert == "no_friend" %}
                <div id="alertBox">Käyttäjää ei löytynyt</div>
            {% elif alert == "frequest_send" %}
                <div id="alertBox">Kaveripyyntö lähetetty</div>
            {% elif alert == "frequest_old" %}
                <div id="alertBox">Käyttäjä on jo kaverisi</div>
            {% elif alert == "frequest_self" %}
                <div id="alertBox">Et voi olla itsesi kaveri</div>
            {% elif alert == "frequest_fail" %}
                <div id="alertBox">Käyttäjää ei löytynyt</div>
            {% elif alert == "frequest_duplicate" %}
                <div id="alertBox">Kaveripyyntö jo olemassa</div>
            {% elif alert == "no_map" %}
                <div id="alertBox">Karttaa ei löytynyt</div>
            {% endif %}
            {% include "alku.jinja" %}
            {% include "requests.jinja" %}
        </div>
        {% else %}
            {% include "login.jinja" %}
        {% endif %}
    </div>
</body>