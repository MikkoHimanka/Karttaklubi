    {% if session.username %}
        <p>Olet kirjautunut nimell√§ {{ session.username }}</p>
        <a href="/logout">Kirjaudu ulos</a>

        <p>{{mapcollection}}</p>

        {% if mapcollection[3] != ""  %}
