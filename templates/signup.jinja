<!DOCTYPE html>
<link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
<meta name="viewport" content="width=device-width, initial-scale=1">
<body>
    {% if alert == "empty_username" %}
        <div id="alertBox">Käyttäjätunnus ei voi olla tyhjä</div>
    {% elif alert == "empty_password" %}
        <div id="alertBox">Salasana ei voi olla tyhjä</div>
    {% elif alert == "username_taken" %}
        <div id="alertBox">Käyttäjätunnus varattu, valitse toinen</div>
    {% endif %}
    <div class="centerWrap">
        <div class ="center">
            <script src="{{ url_for('static', filename='alerts.js') }}"></script>
            <p>Luo uusi käyttäjätunnus</p>
            <form action="/newuser" method="POST">
                <p>Tunnus<br>
            <input type="text" name="username"></p>
                <p>Salasana<br>
            <input type="password" name="password"></p>
            <input type="submit" value="Luo käyttäjä">
            </form>
            <p><a href="./"><button>Takaisin</button></a></p>
        </div>
    </div>
</body>